{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@vendin/whatsapp": ["../../packages/whatsapp/src/index.ts"],
      "@vendin/whatsapp/*": ["../../packages/whatsapp/src/*.ts"]
    }
  },
  "include": ["src", "medusa-config.ts"],
  "exclude": ["node_modules", "dist", ".medusa"]
}
