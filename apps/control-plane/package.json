{
  "name": "@vendin/control-plane",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "bun x tsc",
    "dev": "bun --watch src/index.ts",
    "start": "bun run build && bun dist/src/index.js",
    "lint": "bun x eslint .",
    "lint:fix": "bun x eslint . --fix",
    "test": "bun x vitest run",
    "test:watch": "bun x vitest",
    "test:coverage": "bun x vitest --coverage",
    "typecheck": "bun x tsc --noEmit",
    "db:generate": "bun x drizzle-kit generate",
    "db:migrate": "bun src/database/migrate.ts",
    "db:push": "bun x drizzle-kit push",
    "db:studio": "bun x drizzle-kit studio",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@neondatabase/api-client": "^2.6.0",
    "@neondatabase/serverless": "^1.0.2",
    "@scalar/api-reference": "^1.28.0",
    "@vendin/analytics": "workspace:*",
    "@vendin/utils": "workspace:*",
    "axios": "^1.13.2",
    "cloudflare": "^5.2.0",
    "drizzle-orm": "^0.45.1",
    "lru-cache": "^11.2.4",
    "postgres": "^3.4.8",
    "ws": "^8.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@types/bun": "^1.1.10",
    "@types/node": "^24.7.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vendin/config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
