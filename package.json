{
  "name": "vendin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/plugins/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky || true",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "deploy:control-plane": "turbo run build --filter=@vendin/control-plane && gcloud run deploy control-plane --source . --region southamerica-east1 --min-instances 0",
    "deploy:storefront": "cd apps/storefront && bun run pages:deploy"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bun x eslint --fix",
      "bun x prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "bun x prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bun": "^1.1.10",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "zod": "3.25.76"
  }
}
