{
  "name": "vendin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/plugins/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky || true",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "deploy:control-plane": "pnpm run --filter control-plane deploy",
    "deploy:storefront": "cd apps/storefront && pnpm run pages:deploy"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@vendin/config": "workspace:*",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.60.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.0",
      "next": "16.1.5",
      "zod": "3.25.76",
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "^18.3.2",
      "@types/react-dom": "^18.2.25",
      "vite": "^6.0.0",
      "express": "^4.21.2",
      "@aws-sdk/client-s3": "3.723.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "@types/react-dom"
      ],
      "allowedVersions": {
        "eslint": "9.x",
        "react": "18.x",
        "react-dom": "18.x",
        "vite": "6.x"
      }
    }
  }
}
