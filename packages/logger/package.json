{
  "name": "@vendin/logger",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./cloudflare": {
      "types": "./src/logger-cloudflare-factory.ts",
      "import": "./dist/logger-cloudflare-factory.js",
      "default": "./src/logger-cloudflare-factory.ts"
    },
    "./pino": {
      "types": "./src/pino-logger.ts",
      "import": "./dist/pino-logger.js",
      "default": "./src/pino-logger.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@vendin/config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.37.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
