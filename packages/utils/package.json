{
  "name": "@vendin/utils",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./src/index.ts"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "default": "./src/logger.ts"
    }
  },
  "scripts": {
    "build": "bun x tsc",
    "lint": "bun x eslint .",
    "lint:fix": "bun x eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.10",
    "@vendin/config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
